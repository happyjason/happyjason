<decorators defaultdir="/WEB-INF/view/jsp/decorators">
    <excludes>
        <pattern>/40*.jsp</pattern>
        <pattern>/*ajax=true*</pattern>
        <pattern>/struts/*</pattern>
        <pattern>/resources/*</pattern>
        
        <pattern>/serviceValidate*</pattern>
        <pattern>/samlValidate*</pattern>
    </excludes> 
    
    <decorator name="fluid" page="fluid.jsp">
        <pattern>/login*</pattern>
    </decorator>
    <decorator name="default" page="default.jsp">
        <pattern>/*</pattern>
    </decorator>
</decorators>
